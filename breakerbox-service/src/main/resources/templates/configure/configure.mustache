<script type="text/javascript">
    var selectDependencySelector = $('#selectDependency'); //pulls value from selectDependency form

    var configureForm = new Breakerbox.ConfigureForm({
        serviceId: '{{serviceId}}',
        selectDependencyObj: selectDependencySelector,
        dependencyConfigVersion: $('#selectConfiguration'),
        formObj: $('#configure-form')
    });

    var syncState = new Breakerbox.SyncState({
        serviceId: '{{serviceId}}',
        dependencyId: selectDependencySelector.val(),
        syncSpinnerId: 'sync-spinner',
        domId: 'sync-state'
    });
</script>
